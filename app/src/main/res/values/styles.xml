<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CategoryRowTitle" parent="TextAppearance.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:paddingLeft">@dimen/two</item>
        <item name="android:paddingRight">@dimen/two</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/category_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ItemRowTitle" parent="CategoryRowTitle">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/item_title</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <style name="CartItemRowTitle" parent="TextAppearance.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:paddingLeft">@dimen/two</item>
        <item name="android:paddingRight">@dimen/two</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/item_in_cart_label</item>
    </style>

</resources>
